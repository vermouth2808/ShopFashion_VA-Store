<body>

    <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
        <div class="row">
            <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Add Product</h2>
            </div>
        </div>
        <div class="row tm-edit-product-row">
            <div class="col-xl-6 col-lg-6 col-md-12">
                <form class="tm-edit-product-form" action="/MainAdmin/AddProductAdmin" method="post" enctype="multipart/form-data">
                    @*<div class="form-group mb-3">
                    <label for="IDSanPham">
                        ID Sản Phẩm
                    </label>
                    <input id="IDSanPham"
                           name="IDSanPham"
                           type="text"
                           class="form-control validate"
                           required />
                </div>*@
                    <div class="form-group mb-3">
                        <label for="TenSanPham">
                            Tên Sản Phẩm
                        </label>
                        <input id="TenSanPham"
                               name="TenSanPham"
                               type="text"
                               class="form-control validate"
                               required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="Gia">
                            Giá
                        </label>
                        <input id="Gia"
                               name="Gia"
                               type="number"
                               class="form-control validate"
                               required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="description">Description</label>
                        <input id="MoTa"
                               name="MoTa"
                               type="text"
                               class="form-control validate"
                               required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="TrangThai">Trạng thái</label>
                        <select class="custom-select tm-select-accounts validate"
                                name="TrangThai"
                                
                                id="TrangThai" required>
                            <option selected>Trạng thái</option>
                            <option value="0">Còn hàng</option>
                            <option value="1">Hết hàng</option>

                        </select>
                    </div>
                    <div class="row">
                        <div class="form-group mb-3 col-xs-12 col-sm-6">
                            <label for="IDLoaiSP">ID Loại sản phẩm</label>
                            <select class="custom-select tm-select-accounts validate"
                                    name="IDLoaiSP"
                                    id="IDLoaiSP"
                                    required>
                                <option selected>ID Loại sản phẩm</option>
                                <option value=0>ÁO NỮ</option>
                                <option value=1>ÁO KHOÁC NỮ </option>
                                <option value=2>QUẦN & JUMPSUIT NỮ</option>
                                <option value=3>GIÀY & DÉP NỮ</option>
                                <option value=4>ĐẦM NỮ</option>
                                <option value=5>ĐỒ LÓT NỮ</option>
                                <option value=6>SET ĐỒ ĐỒNG BỘ NỮ</option>
                                <option value=7>PHỤ KIỆN NỮ</option>
                                <option value=8>ÁO NAM</option>
                                <option value=9>ÁO KHOÁC NAM</option>
                                <option value=10>QUẦN NAM</option>
                                <option value=11>GIÀY & DÉP NAM</option>
                                <option value=12>PHỤ KIỆN NAM</option>
                                <option value=13>ÁO BÉ GÁI</option>
                                <option value=14>QUẦN BÉ GÁI</option>
                                <option value=15>VÁY BÉ GÁI</option>
                                <option value=16>PHỤ KIỆN BÉ GÁI</option>
                                <option value=17>ÁO BÉ TRAI</option>
                                <option value=18>QUẦN BÉ TRAI</option>
                                <option value=19>PHỤ KIỆN BÉ TRAI</option>

                            </select>
                            @*<label for="IDLoaiSP">
                            ID Loại Sản Phẩm
                        </label>
                        <input id="IDLoaiSP"
                               name="IDLoaiSP"
                               type="text"
                               class="form-control validate"
                               data-large-mode="true" />*@
                        </div>
                        <div class="form-group mb-3 col-xs-12 col-sm-6">
                            <label for="SoLuongTrongKho">
                                Số Lượng Trong Kho
                            </label>
                            <input id="SoLuongTrongKho"
                                   name="SoLuongTrongKho"
                                   type="number"
                                   class="form-control validate" required />
                        </div>
                    </div>

            </div>
            <div >

            <div class="form-group">
                <h3>Hình Chính</h3>
                <input type="file" id="uploadImage" name="uploadImage" accept="image/*" />
            </div>
            <div class="form-group">
                <h4>Hình 1</h4>
                <input type="file" id="uploadImage1" name="uploadImage1" accept="image/*" />
            </div>
            <div class="form-group">
                <h4>Hình 2</h4>
                <input type="file" id="uploadImage2" name="uploadImage2" accept="image/*" />
            </div>
            <div class="form-group">
                <h4>Hình 3</h4>
                <input type="file" id="uploadImage3" name="uploadImage3" accept="image/*" />
            </div>
            </div>
            <div class="col-12">
                <button type="submit"  class="btn btn-primary btn-block text-uppercase">THÊM SẢN PHẨM</button>
            </div>
            </form>
        </div>
    </div>


