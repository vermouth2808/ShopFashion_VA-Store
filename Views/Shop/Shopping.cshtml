@model IEnumerable<ShopFashion_VA_Store.Models.ShoppingCartItem>
@{
    ViewBag.Title = "Shopping";
    Layout = "~/Views/Shared/_MainLayOut.cshtml";
}


<div class="body_plus">
    <section class="h-100 ">
        <div class="container py-5">
            <div class="row d-flex justify-content-center my-4">
                <div class="col-md-8" style="margin-left:-30%">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            @if (Model != null && Model.Any())
                            {
                                <h5 class="mb-0">Cart -   items</h5>
                            }
                            </div>
                        <div class="card-body">
                            <!-- Single item -->
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                            <div class="row" style="margin-bottom:12px" id="trow_@item.ProductId">
                                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                    <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                        <img src="~/tool/image/favorite products/@item.ProductImg"
                                             class="w-100" alt="Blue Jeans Jacket" />
                                        <a href="#!">
                                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                        </a>
                                    </div>
                                </div>

                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                    <p><strong></strong></p>
                                    <a style="text-decoration: none;" href="@Url.Action("Detail",new {id = item.ProductId})"><p style="font-size: 14px; font-weight: 700; color:#000">@item.ProductName</p></a>
                                    <p>Size: M</p>
                                    <button type="button" data-id="@item.ProductId" class="btnDelete btn btn-primary btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                                            title="Remove item">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm mb-2" data-mdb-toggle="tooltip"
                                            title="Move to the wish list">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </div>

                                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                    <div class="d-flex mb-4" style="max-width: 300px">
                                        <button class="btn btn-primary px-3 me-2" id="Quantity_@item.ProductId"
                                                onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                            <i class="fas fa-minus"></i>
                                        </button>

                                        <div class="form-outline">
                                            <input id="form1" min="0" name="quantity" value="@item.Quantity" type="number" class="form-control" />
                                        </div>

                                        <button class="btn btn-primary px-3 ms-2"
                                                onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                    <p>
                                        Giá:<span class="text-start text-md-center">
                                            <strong>@item.Price</strong>
                                        </span>
                                    </p>
                                    <p>
                                        Tổng tiền:<span class="text-start text-md-center">
                                            <strong>@item.TotalPrice</strong>
                                        </span>
                                    </p>

                                </div>
                               
                                <hr class="my-4" style=" width: 90%; margin-left: 3%"/>
                            </div>

                                }
            }
            else
            {
                <div class="row"><p>Không có sản phẩm</p></div>
            }
                            <!-- Single item -->

                        </div>
                    </div>
                    @*<div class="card mb-4">
                        <div class="card-body">
                            <p><strong>Expected shipping delivery</strong></p>
                            <p class="mb-0">12.10.2020 - 14.10.2020</p>
                        </div>
                    </div>*@
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body">
                            <p><strong>We accept</strong></p>
                            <div class="logo_cart">
                                <img class="me-2" style="width:45px"
                                     src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                                     alt="Visa" />
                                <img class="me-2" style="width:45px"
                                     src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                                     alt="American Express" />
                                <img class="me-2" style="width:45px"
                                     src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                                     alt="Mastercard" />
                            </div>


                        </div>
                    </div>
                </div>
                <div class="col-md-4 " style="position:relative">
                    <div class="card mb-4" style="position: initial">
                        <div class="card-header py-3">
                            <h5 class="mb-0">Summary</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @*<li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                Số sản phẩm
                <span>$53.98</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                Shipping
                <span>Gratis</span>
            </li>*@

                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                    <div>
                                        <strong>Tổng hóa đơn</strong>

                                    </div>
                                    @if (Model != null && Model.Any())
                                    {
                                        var sumMoney = decimal.Zero;

                                        foreach (var item in Model)
                                        {
                                            sumMoney += item.TotalPrice;

                                        }
                                        <span><strong>@sumMoney</strong></span>

                                    }
                                </li>
                            </ul>

                            <button type="button" class="btn btn-primary btn-lg btn-block">
                                Thanh Toán
                            </button>
                            <button type="button" class=" btn btn-danger btn-lg btn-block" >
                                Xóa tất cả sản phẩm
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

