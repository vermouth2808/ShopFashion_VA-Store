            </div>
            <div class="logo">
                <a href="@Url.Action("Index","Shop")"><img style="width: 120px; margin-left: 65px; margin-top: -20px; " src="~/tool/image/logo.jpg" alt=""></a>
            </div>
            <div class="others">
                <li>
                    <form class="form_search" action="/Shop/searchProduct">
                        <input type="search" id="search" name="search" placeholder="Search here ...">
                        <button type="submit" class="fa fa-search"></button>
                    </form>
                </li>
                    <div class="dropdown">
                        <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @ViewBag.user
                            <img style="width:28px" class="img-profile rounded-circle"
                                 src="~/Areas/Admin/Resources/img/undraw_profile.svg">
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Logout","Shop")">
                                    <span style="padding-left:28%" class="mr-2 d-none d-lg-inline text-gray-600 small">Logout</span>
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li><a href="@Url.Action("Shopping","Shop")"><i class="fa-solid fa-cart-shopping"></i></a>
                <p id="checkout_item" style="background: #e96a76; border-radius: 50%; width: 18px; height: 18px; position: absolute; margin: -33px 12px  3px 12px;
                display: flex; justify-content: center; font-weight: 700; ">0</p>
